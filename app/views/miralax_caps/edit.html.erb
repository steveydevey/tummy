<% content_for :page_title, "Edit Miralax Cap" %>
<div style="max-width: 600px;">

  <%= form_with model: @miralax_cap, local: true, url: miralax_cap_path(@miralax_cap, return_to: @return_to) do |form| %>
    <%= hidden_field_tag :return_to, @return_to %>
    <% if @miralax_cap.errors.any? %>
      <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <h3 style="margin-top: 0;"><%= pluralize(@miralax_cap.errors.count, "error") %> prohibited this miralax cap from being saved:</h3>
        <ul style="margin-bottom: 0;">
          <% @miralax_cap.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 15px;">
      <%= form.label :amount, "Amount", style: "display: block; margin-bottom: 10px; font-weight: bold;" %>
      <div style="display: flex; flex-direction: column; gap: 10px;">
        <% MiralaxCap::AMOUNT_OPTIONS.each do |amount| %>
          <label style="display: flex; align-items: center; padding: 10px; border: 2px solid #ddd; border-radius: 4px; cursor: pointer; background-color: #ffffff; color: #000;">
            <%= form.radio_button :amount, amount, checked: (@miralax_cap.amount == amount), style: "margin-right: 10px; width: 18px; height: 18px; cursor: pointer;" %>
            <span style="font-size: 16px;">
              <strong style="color: #2196F3; margin-right: 8px;"><%= amount %></strong>
              <%= amount == 1.0 ? 'cap' : 'caps' %>
            </span>
          </label>
        <% end %>
      </div>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :occurred_at, "Date & Time", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.datetime_local_field :occurred_at, id: "miralax_cap_occurred_at", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :notes, "Notes", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.text_area :notes, rows: 3, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-top: 20px; display: flex; gap: 10px; flex-wrap: wrap;">
      <%= form.submit "Update Miralax Cap", style: "background-color: #2196F3; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
      <%= link_to "Cancel", @return_to, style: "color: #000; text-decoration: none; padding: 10px 20px; border: 1px solid #ddd; border-radius: 4px; display: inline-block;" %>
      <%= link_to "Delete this entry", miralax_cap_path(@miralax_cap, return_to: @return_to), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this miralax cap entry?" }, 
          style: "background-color: #f44336; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px; text-decoration: none; display: inline-block;" %>
    </div>
  <% end %>
</div>


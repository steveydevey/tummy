<% content_for :page_title, "New Accident" %>
<div style="max-width: 600px;">

  <%= form_with model: @accident, local: true do |form| %>
    <% if @accident.errors.any? %>
      <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <h3 style="margin-top: 0;"><%= pluralize(@accident.errors.count, "error") %> prohibited this accident from being saved:</h3>
        <ul style="margin-bottom: 0;">
          <% @accident.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 15px;">
      <%= form.label :accident_type, "Type", style: "display: block; margin-bottom: 10px; font-weight: bold;" %>
      <div style="display: flex; flex-direction: column; gap: 10px;">
        <% Accident::ACCIDENT_TYPES.each do |value, label| %>
          <label style="display: flex; align-items: center; padding: 10px; border: 2px solid #ddd; border-radius: 4px; cursor: pointer; background-color: #ffffff; color: #000;">
            <%= form.radio_button :accident_type, value, style: "margin-right: 10px; width: 18px; height: 18px; cursor: pointer;" %>
            <span style="font-size: 16px;"><%= label %></span>
          </label>
        <% end %>
      </div>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :occurred_at, "Date & Time", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.datetime_local_field :occurred_at, id: "accident_occurred_at", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :notes, "Notes", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.text_area :notes, rows: 3, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-top: 20px;">
      <%= form.submit "Create Accident", style: "background-color: #FF9800; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
      <%= link_to "Cancel", food_entries_path, style: "margin-left: 10px; color: #000; text-decoration: none;" %>
    </div>
  <% end %>
</div>


<div style="display: flex; gap: 30px; max-width: 1200px;">
  <div style="flex: 1;">
    <h1>Edit Bowel Movement</h1>

    <%= form_with model: @bowel_movement, local: true do |form| %>
      <% if @bowel_movement.errors.any? %>
        <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
          <h3 style="margin-top: 0;"><%= pluralize(@bowel_movement.errors.count, "error") %> prohibited this bowel movement from being saved:</h3>
          <ul style="margin-bottom: 0;">
            <% @bowel_movement.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-bottom: 15px;">
        <%= form.label :occurred_at, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
        <%= form.datetime_local_field :occurred_at, id: "bowel_movement_occurred_at", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <%= form.label :severity, "Consistency (1-5)", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
        <%= form.number_field :severity, in: 1..5, step: 1, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
        <small style="color: #666;">Select a value from 1 to 5 (see chart on the right)</small>
      </div>

      <div style="margin-bottom: 15px;">
        <%= form.label :notes, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
        <%= form.text_area :notes, rows: 3, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
      </div>

      <div style="margin-top: 20px;">
        <%= form.submit "Update Bowel Movement", style: "background-color: #2196F3; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
        <%= link_to "Cancel", bowel_movements_path, style: "margin-left: 10px; color: #666; text-decoration: none;" %>
      </div>
    <% end %>
  </div>

  <div style="flex: 0 0 350px; background-color: #f9f9f9; padding: 20px; border-radius: 8px; border: 1px solid #ddd;">
    <h2 style="margin-top: 0; color: #000;">Consistency Scale</h2>
    <div style="display: flex; flex-direction: column; gap: 15px;">
      <% BowelMovement::SEVERITY_TERMS.each do |level, term| %>
        <div style="background-color: #ffffff; padding: 15px; border-radius: 6px; border: 2px solid #ddd;">
          <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 5px;">
            <span style="font-size: 24px; font-weight: bold; color: #2196F3; min-width: 30px;"><%= level %></span>
            <span style="font-size: 18px; font-weight: bold; color: #000;"><%= term %></span>
          </div>
        </div>
      <% end %>
    </div>
    <p style="margin-top: 20px; font-size: 14px; color: #666; line-height: 1.5;">
      This scale helps track the consistency of your bowel movements. Select the number that best matches your experience.
    </p>
  </div>
</div>


<% content_for :page_title, "Bowel Movements" %>
<div>

  <% if @bowel_movements.any? %>
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
      <thead>
        <tr>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd; background-color: #f2f2f2; color: #000;">Consistency</th>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd; background-color: #f2f2f2; color: #000;">Occurred At</th>
        </tr>
      </thead>
      <tbody>
        <% @bowel_movements.each do |movement| %>
          <% 
            edit_path = edit_bowel_movement_path(movement, return_to: request.url)
            formatted_date = movement.occurred_at.strftime("%b %d, %Y at %l:%M %p").strip
            description = movement.severity.present? ? "#{movement.severity} - #{movement.severity_term}" : "-"
          %>
          <tr onclick="window.location.href='<%= edit_path %>'" style="cursor: pointer;">
            <td style="padding: 12px; border: 1px solid #ddd; background-color: #F3E5F5; color: #000;"><%= description %></td>
            <td style="padding: 12px; border: 1px solid #ddd; background-color: #F3E5F5; color: #000;"><%= formatted_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p style="margin-top: 20px; color: #000;">No bowel movements yet. <%= link_to "Create your first entry", new_bowel_movement_path %>.</p>
  <% end %>
</div>

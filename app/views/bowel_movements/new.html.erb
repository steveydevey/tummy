<div style="max-width: 600px;">
  <h1>New Bowel Movement</h1>

  <%= form_with model: @bowel_movement, local: true do |form| %>
    <% if @bowel_movement.errors.any? %>
      <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <h3 style="margin-top: 0;"><%= pluralize(@bowel_movement.errors.count, "error") %> prohibited this bowel movement from being saved:</h3>
        <ul style="margin-bottom: 0;">
          <% @bowel_movement.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 15px;">
      <%= form.label :severity, "Consistency", style: "display: block; margin-bottom: 10px; font-weight: bold;" %>
      <div style="display: flex; flex-direction: column; gap: 10px;">
        <% BowelMovement::SEVERITY_TERMS.each do |level, term| %>
          <label style="display: flex; align-items: center; padding: 10px; border: 2px solid #ddd; border-radius: 4px; cursor: pointer; background-color: #ffffff; color: #000;">
            <%= form.radio_button :severity, level, style: "margin-right: 10px; width: 18px; height: 18px; cursor: pointer;" %>
            <span style="font-size: 16px;">
              <strong style="color: #2196F3; margin-right: 8px;"><%= level %></strong>
              <%= term %>
            </span>
          </label>
        <% end %>
      </div>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :occurred_at, "Date & Time", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.datetime_local_field :occurred_at, id: "bowel_movement_occurred_at", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :notes, "Notes", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.text_area :notes, rows: 3, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-top: 20px;">
      <%= form.submit "Create Bowel Movement", style: "background-color: #2196F3; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
      <%= link_to "Cancel", food_entries_path, style: "margin-left: 10px; color: #000; text-decoration: none;" %>
    </div>
  <% end %>
</div>

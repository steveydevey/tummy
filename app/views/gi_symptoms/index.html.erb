<div>
  <h1>GI Symptoms</h1>

  <div style="margin-bottom: 20px;">
    <%= link_to "Add New GI Symptom", new_gi_symptom_path, style: "background-color: #2196F3; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; display: inline-block;" %>
    <%= link_to "Back to Main View", food_entries_path, style: "margin-left: 10px; color: #000; text-decoration: none;" %>
  </div>

  <% if @gi_symptoms.any? %>
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
      <thead>
        <tr>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd; background-color: #f2f2f2; color: #000;">Symptom Type</th>
          <th style="padding: 12px; text-align: left; border: 1px solid #ddd; background-color: #f2f2f2; color: #000;">Occurred At</th>
        </tr>
      </thead>
      <tbody>
        <% @gi_symptoms.each do |symptom| %>
          <% 
            edit_path = edit_gi_symptom_path(symptom, return_to: request.url)
            formatted_date = symptom.occurred_at.strftime("%b %d, %Y at %l:%M %p").strip
            description = symptom.severity.present? ? "#{symptom.symptom_type} - #{symptom.severity}/10" : symptom.symptom_type
          %>
          <tr onclick="window.location.href='<%= edit_path %>'" style="cursor: pointer;">
            <td style="padding: 12px; border: 1px solid #ddd; background-color: #E3F2FD; color: #000;"><%= description %></td>
            <td style="padding: 12px; border: 1px solid #ddd; background-color: #E3F2FD; color: #000;"><%= formatted_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p style="margin-top: 20px; color: #000;">No GI symptoms yet. <%= link_to "Create your first entry", new_gi_symptom_path %>.</p>
  <% end %>
</div>

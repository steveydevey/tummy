<div style="max-width: 600px;">
  <h1>Edit Food Entry</h1>

  <%= form_with model: @food_entry, local: true, url: food_entry_path(@food_entry, return_to: @return_to) do |form| %>
    <%= hidden_field_tag :return_to, @return_to %>
    <% if @food_entry.errors.any? %>
      <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <h3 style="margin-top: 0;"><%= pluralize(@food_entry.errors.count, "error") %> prohibited this food entry from being saved:</h3>
        <ul style="margin-bottom: 0;">
          <% @food_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 15px;">
      <%= form.label :description, "Food", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.text_area :description, rows: 3, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :consumed_at, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.datetime_local_field :consumed_at, id: "food_entry_consumed_at", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :notes, "Notes", style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= form.text_area :notes, rows: 3, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; box-sizing: border-box; background-color: #ffffff; color: #000;" %>
    </div>

    <div style="margin-top: 20px; display: flex; gap: 10px; flex-wrap: wrap;">
      <%= form.submit "Update Food Entry", style: "background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
      <%= link_to "Cancel", @return_to, style: "color: #000; text-decoration: none; padding: 10px 20px; border: 1px solid #ddd; border-radius: 4px; display: inline-block;" %>
      <%= link_to "Delete this entry", food_entry_path(@food_entry, return_to: @return_to), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this food entry?" }, 
          style: "background-color: #f44336; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px; text-decoration: none; display: inline-block;" %>
    </div>
  <% end %>
</div>


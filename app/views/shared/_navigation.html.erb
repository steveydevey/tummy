<div style="margin-bottom: 30px; padding-bottom: 20px; border-bottom: 2px solid #ddd;">
  <div style="display: flex; align-items: center; gap: 15px; flex-wrap: wrap;">
    <%= link_to root_path, style: "display: flex; align-items: center; text-decoration: none; margin-right: 20px;" do %>
      <%= image_tag "tummy.png", alt: "Gitrack Logo", style: "max-width: 60px; height: auto; margin-right: 10px;" %>
      <span style="font-weight: bold; color: #000;">All Entries</span>
    <% end %>
    
    <div style="display: flex; gap: 10px; flex-wrap: wrap; flex: 1;">
      <%= link_to "Add Food", new_food_entry_path, style: "background-color: #4CAF50; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px; font-size: 14px; white-space: nowrap;" %>
      <%= link_to "Add GI", new_gi_symptom_path, style: "background-color: #2196F3; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px; font-size: 14px; white-space: nowrap;" %>
      <%= link_to "Add BM", new_bowel_movement_path, style: "background-color: #9C27B0; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px; font-size: 14px; white-space: nowrap;" %>
      <%= link_to "List Foods", food_entries_path, style: "background-color: #f2f2f2; color: #000; padding: 8px 16px; text-decoration: none; border-radius: 4px; font-size: 14px; white-space: nowrap; border: 1px solid #ddd;" %>
      <%= link_to "List GI", gi_symptoms_path, style: "background-color: #f2f2f2; color: #000; padding: 8px 16px; text-decoration: none; border-radius: 4px; font-size: 14px; white-space: nowrap; border: 1px solid #ddd;" %>
      <%= link_to "List BMs", bowel_movements_path, style: "background-color: #f2f2f2; color: #000; padding: 8px 16px; text-decoration: none; border-radius: 4px; font-size: 14px; white-space: nowrap; border: 1px solid #ddd;" %>
    </div>
  </div>
</div>

